<section id="form"><!--form-->
	<div class="container">
		<div class="row">
			<div class="col-sm-4 col-sm-offset-1">
				<div class="login-form"><!--login form-->
					<h2>Login to your account</h2>
					<%= form_with(url: sessions_login_path, method: "post", local: true) do |form| %>
					
						<%= form.text_field :email, placeholder: "Email Address" %>

						<%= form.text_field :password, placeholder: "Password" %>
						<span>
							<%= check_box_tag :remember_me, true, params[:remember_me] %> 
							Keep me signed in
						</span>
						<button type="submit" class="btn btn-default">Login</button>
						
					<% end %>
				</div><!--/login form-->
			</div>
			<div class="col-sm-1">
				<h2 class="or">OR</h2>
			</div>
			<div class="col-sm-4">
				<div class="signup-form"><!--sign up form-->
					<h2>New User Signup!</h2>
					
					<%= form_with(url: sessions_create_path, method: "post", local: true) do |form| %>
							<%= form.text_field :name, placeholder: "Name" %>
						
							<%= form.text_field :email, placeholder: "Email Address" %>

							<%= form.text_field :password, placeholder: "Password" %>

							<button type="submit" class="btn btn-default">Signup</button>
					<% end %>

				</div><!--/sign up form-->
			</div>
		</div>
	</div>
</section><!--/form-->