<div class="header-middle"><!--header-middle-->
    <div class="container">
        <div class="row">
            <div class="col-md-4 clearfix">
                <div class="logo pull-left">
                    <%= link_to image_tag("home/logo.png"), welcome_home_path %>
                </div>
                <div class="btn-group pull-right clearfix">
                    <div class="btn-group">
                        <button type="button" class="btn btn-default dropdown-toggle usa" data-toggle="dropdown">
                            USA
                            <span class="caret"></span>
                        </button>
                        <ul class="dropdown-menu">
                            <li><a href="">Canada</a></li>
                            <li><a href="">UK</a></li>
                        </ul>
                    </div>
                    
                    <div class="btn-group">
                        <button type="button" class="btn btn-default dropdown-toggle usa" data-toggle="dropdown">
                            DOLLAR
                            <span class="caret"></span>
                        </button>
                        <ul class="dropdown-menu">
                            <li><a href="">Canadian Dollar</a></li>
                            <li><a href="">Pound</a></li>
                        </ul>
                    </div>
                </div>
            </div>
            <div class="col-md-8 clearfix">
                <div class="shop-menu clearfix pull-right">
                    <ul class="nav navbar-nav">
                        <li><%= link_to "<i class='fa fa-user'></i> Account".html_safe, users_show_path %></li>
                        <li><a href=""><i class="fa fa-star"></i> Wishlist</a></li>
                        <li><%= link_to "<i class='fa fa-crosshairs'></i> Checkout".html_safe, shops_checkout_path %></li>
                        <li><%= link_to "<i class='fa fa-shopping-cart'></i> Cart".html_safe, shops_cart_path %></li> 
                        <li><% if current_user.present? %>
                                <%= link_to "<i class='fa fa-unlock'></i> Logout".html_safe, sessions_destroy_path, method: :delete %>
                            <% else %>
                                <%= link_to "<i class='fa fa-lock'></i> Login".html_safe, users_new_path %>
                            <% end %>
                        </li>
                    </ul>
                </div>
            </div>
        </div>
    </div>
</div><!--/header-middle-->

<div class="header-bottom"><!--header-bottom-->
    <div class="container">
        <div class="row">
            <div class="col-sm-9">
                <div class="navbar-header">
                    <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                        <span class="sr-only">Toggle navigation</span>
                        <span class="icon-bar"></span>
                        <span class="icon-bar"></span>
                        <span class="icon-bar"></span>
                    </button>
                </div>
                <div class="mainmenu pull-left">
                    <ul class="nav navbar-nav collapse navbar-collapse">
                        <li><%= link_to "Home", welcome_home_path, class: "active" %></li>
                        <li class="dropdown"><%= link_to "<i class='fa fa-angle-down'></i> Shop".html_safe, shops_shop_path %>
                            <ul role="menu" class="sub-menu">
                                <li><%= link_to 'Products', shops_shop_path %></li>
                                <li><%= link_to 'Checkout', shops_checkout_path %></li> 
                                <li><%= link_to 'Cart', shops_cart_path %></li> 
                                <li><%= link_to 'Login', users_new_path %></li> 
                            </ul>
                        </li> 
                        <li class="dropdown"><%= link_to "<i class='fa fa-angle-down'></i> Blog".html_safe, shops_shop_path %>
                            <ul role="menu" class="sub-menu">
                                <li><%= link_to 'Blog List', blogs_blog_path %></li>
                                <li><%= link_to 'Blog Single', blogs_blog_single_path %></li>
                            </ul>
                        </li> 
                        <li><%= link_to 'Contact', welcome_contact_path %></li>
                    </ul>
                </div>
            </div>
            <div class="col-sm-3">
                <div class="search_box pull-right">
                    <input type="text" placeholder="Search"/>
                </div>
            </div>
        </div>
    </div>
</div><!--/header-bottom-->
</header><!--/header-->